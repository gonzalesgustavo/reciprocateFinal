<div><strong>
	<% likes.each.with_index do |like, index|%>
		<% if likes.size == 1 %>
			<strong><%= like.user.name %></strong> likes this!!!
		<% elsif like == likes.last %>
			<strong>and</strong>
			<strong><%= + like.user.name %></strong> liked this!!!
		<% elsif index > 1 %>
			<strong>and <%= likes.size - index.to_s %> others liked this post!!!</strong>
			<% break %>
		<% elsif index == likes.size - 2 || index == 1 %>
			<%= like.user.name %>
		<% else %>
			<%= like.user.name + ", " %>
		<% end %>
	<% end %>
	</strong></div>